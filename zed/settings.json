{
  /*
   * Personalization
   */
  "ui_font_size": 14,
  "buffer_font_size": 14,
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "One Dark"
  },
  "base_keymap": "Atom",
  "scroll_beyond_last_line": "off",
  "project_panel": {
    "dock": "right",
    "default_width": 300
  },
  "terminal": {
    "font_size": 12,
    "default_height": 200,
    "max_scroll_history_lines": 100000
  },
  "buffer_font_family": "Input Mono",
  "buffer_line_height": {
    "custom": 1.75
  },

  /*
   * Vim
   */
  "vim_mode": true,
  "vertical_scroll_margin": 5,
  "vim": {
    "use_multiline_find": true,
    "use_smartcase_find": true
  },
  "cursor_blink": false,
  "git": {
    "inline_blame": { "enabled": false }
  },

  /*
   * Language Servers
   */
  "lsp": {
    "pyright": {
      "settings.python.pythonPath": ".venv/bin/python",
      "settings.python.analysis.diagnosticMode": "workspace",
      "settings.python.analysis.typeCheckingMode": "strict"
    }
  },

  "languages": {
    "Python": {
      "format_on_save.language_server.name": "ruff",
      "formatter.language_server.name": "ruff",
      "language_servers": ["pyright", "ruff"]
    }
  },

  /*
   * AI Setup
   */
  "assistant": {
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-5-sonnet-20240620"
    },
    "version": "2"
  },
  "features": {
    "inline_completion_provider": "supermaven"
  },

  /*
   * Miscellaneous
   */
  "telemetry": { "metrics": false }
}
