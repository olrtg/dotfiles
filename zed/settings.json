{
  /*
   * Personalization
   */
  "context_servers": {
    "mcp-server-context7": {
      "source": "extension",
      "enabled": true,
      "settings": {
        "default_minimum_tokens": "10000"
      }
    }
  },
  "agent": {
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-sonnet-4"
    },
    "default_profile": "write",
    "play_sound_when_agent_done": true,
    "use_modifier_to_send": false
  },
  "ui_font_size": 15,
  "buffer_font_size": 14,
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "One Dark"
  },
  "base_keymap": "Atom",
  "scroll_beyond_last_line": "off",
  "project_panel": {
    "default_width": 300
  },
  "terminal": {
    "font_size": 13,
    "default_height": 200,
    "max_scroll_history_lines": 100000
  },
  "buffer_font_family": "Liga SFMono Nerd Font",
  "ui_font_family": "Liga SFMono Nerd Font",

  "diagnostics": {
    "inline": {
      "enabled": true
    }
  },
  /*
   * Vim
   */
  "vim_mode": true,
  "vertical_scroll_margin": 5,
  "vim": {
    "use_smartcase_find": true
  },
  "cursor_blink": false,
  "git": {
    "inline_blame": {
      "enabled": false
    }
  },

  /*
   * Language Servers
   */
  "lsp": {
    "eslint": {
      "settings": {
        "rulesCustomizations": [
          // set all eslint errors/warnings to show as warnings
          { "rule": "*", "severity": "warn" }
        ]
      }
    }
  },

  "languages": {
    // START: run ESLint on save
    "JavaScript": {
      "code_actions_on_format": { "source.fixAll.eslint": true }
    },
    "TypeScript": {
      "code_actions_on_format": { "source.fixAll.eslint": true }
    },
    "TSX": {
      "code_actions_on_format": { "source.fixAll.eslint": true }
    },
    // END: run ESLint on save

    "Python": {
      "language_servers": ["pyright", "ruff"],
      "format_on_save": "on",
      "formatter": [
        {
          "code_actions": {
            "source.organizeImports.ruff": true,
            "source.fixAll.ruff": true
          }
        },
        {
          "language_server": {
            "name": "ruff"
          }
        }
      ]
    },

    "Ruby": {
      "language_servers": ["ruby-lsp", "rubocop", "!solargraph", "!sorbet"]
    },

    "HTML/ERB": {
      "formatter": {
        "external": {
          "command": "erb-formatter",
          "arguments": ["--stdin-filename", "{buffer_path}"]
        }
      }
    }
  },

  /*
   * Miscellaneous
   */
  "telemetry": { "metrics": false }
}
