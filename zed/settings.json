{
  "features": {
    "inline_completion_provider": "supermaven"
  },
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "One Dark"
  },
  "base_keymap": "Atom",

  // [[ Fonts ]]
  "ui_font_size": 14,
  "buffer_font_size": 14,
  "ui_font_family": "JetBrainsMono Nerd Font",
  "buffer_font_family": "JetBrainsMono Nerd Font",

  // [[ Vim ]]
  "vim_mode": true,
  "vertical_scroll_margin": 5,
  "vim": {
    "use_multiline_find": true,
    "use_smartcase_find": true
  },
  "gutter": {
    "line_numbers": false
  },
  "cursor_blink": false,
  "git": {
    "inline_blame": {
      "enabled": false
    }
  },
  // [[ UI ]]
  "project_panel": {
    "dock": "right",
    "default_width": 350
  },
  "terminal": {
    "font_size": 14,
    "default_height": 200,
    "max_scroll_history_lines": 100000
  },
  // [[ LSP ]]
  "inlay_hints": {
    "enabled": false
  },
  "lsp": {
    "vtsls": {
      "initialization_options": {
        "typescript": {
          "inlayHints": {
            "parameterNames": {
              "enabled": false,
              "suppressWhenArgumentMatchesName": false
            },
            "parameterTypes": {
              "enabled": false
            },
            "variableTypes": {
              "enabled": false,
              "suppressWhenTypeMatchesName": false
            },
            "propertyDeclarationTypes": {
              "enabled": false
            },
            "functionLikeReturnTypes": {
              "enabled": false
            },
            "enumMemberValues": {
              "enabled": true
            }
          }
        }
      }
    }
  },

  // [[ Misc ]]
  "telemetry": {
    "metrics": false
  }
}
