{
  "features": {
    "inline_completion_provider": "supermaven"
  },
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "One Dark"
  },
  "base_keymap": "Atom",
  // [[ Fonts ]]
  "ui_font_size": 14,
  "buffer_font_size": 14,
  "ui_font_family": "JetBrainsMono Nerd Font",
  "buffer_font_family": "JetBrainsMono Nerd Font",
  // [[ Reduce clutter ]]
  "toolbar": {
    "quick_actions": false
  },
  "collaboration_panel": {
    "button": false
  },
  "chat_panel": {
    "button": false
  },
  "notification_panel": {
    "button": false
  },
  "assistant": {
    "version": "1",
    "button": false
  },
  // [[ Vim ]]
  "vim_mode": true,
  "vertical_scroll_margin": 5,
  "vim": {
    "use_multiline_find": true,
    "use_smartcase_find": true
  },
  "gutter": {
    "line_numbers": false
  },
  "cursor_blink": false,
  "git": {
    "inline_blame": {
      "enabled": false
    }
  },
  // [[ UI ]]
  "project_panel": {
    "dock": "right",
    "default_width": 350
  },
  "terminal": {
    "font_size": 14,
    "default_height": 200,
    "max_scroll_history_lines": 100000
  },
  // [[ LSP ]]
  "inlay_hints": {
    "enabled": true
  },
  "lsp": {
    "vtsls": {
      "initialization_options": {
        "preferences": {
          "typescript": {
            "inlayHints": {
              "parameterNames": {
                "enabled": false
              },
              "parameterTypes": {
                "enabled": false
              },
              "variableTypes": {
                "enabled": false
              },
              "propertyDeclarationTypes": {
                "enabled": false
              },
              "functionLikeReturnTypes": {
                "enabled": false
              }
            }
          }
        }
      }
    }
  },
  // [[ Misc ]]
  "telemetry": {
    "metrics": false
  }
}
